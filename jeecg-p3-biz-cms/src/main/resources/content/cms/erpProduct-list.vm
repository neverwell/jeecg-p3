#parse("content/base/back/common/macro.vm")
<!DOCTYPE html>
<html lang="en">
#parse("content/base/back/common/head.vm")
<body style='overflow:scroll;overflow-x:hidden'>
	<div class="container bs-docs-container" style="width:100%;">
		<div class="row">
			<form role="form" class="form-inline" action="$!{basePath}/p3/cms/erpProduct.do?list" method="post"  id="formSubmit">
				<div  class="col-md-10" style="width:100%">
					<div class="panel panel-default">
						<div class="panel-heading">产品列表</div>
						<div class="panel-body">
							<div class="search">
								<div class="form-group col-sm-3">
									<label for="name" class="control-label col-sm-3 line34">产品名称</label>
									<div class="col-sm-8">
										<input type="text" name="title" id="title" value="$!{erpProduct.name}" class="form-control" />
									</div>
								</div>
								
								<div class="form-group col-sm-3">
									<label for="columnId" class="control-label col-sm-3 line34">类别</label>
									<div class="col-sm-8">
										<input type="text" name="columnId" id="columnId" value="$!{erpProduct.columnId}" class="form-control" />
									</div>
								</div>
								<button type="submit" class="btn btn-primary">搜  索</button>
								<div class="clearfix"></div>
							</div>
							
							<div id="legend">
								<legend  class="le">
									<button type="button" class="btn btn-primary" onclick="doUrl('$!{basePath}/p3/cms/erpProduct.do?toAdd')" >新增</button>
								</legend>
							</div>
							
							<table class="table table-striped">
								<thead>
                                    <th>产品名称</th>
                                    <th>产品编码</th>
                                    <th>产品类别</th>
                                    <th>操作</th>
								</thead>
								<tbody>
									#if($!{pageInfos})
										#foreach($!{info} in $!{pageInfos})
											<tr>			
                                                <td>$!{info.name}</td>
                                                <td>$!{info.code}</td>
                                                <td class="$!{info.columnId}">$!{info.columnId}</td>
                                                <td class="last">
													<a href="javascript:doUrl('$!{basePath}/p3/cms/erpProduct.do?toEdit&id=$!{info.id}')" >编辑</a>
													<a href="javascript:delData('$!{basePath}/p3/cms/erpProduct.do?doDelete&id=$!{info.id}')">删除</a>
													<a href="javascript:doUrl('$!{basePath}/p3/cms/erpProduct.do?toDetail&id=$!{info.id}')">详情</a>
												</td>
											</tr>
										#end
									#end
								</tobody>
							</table>
							
                            <div class="text-right">
                                <!--公用翻页代码-->
                                #set($attr='formSubmit')
                                #showPageList($pageInfos $attr)
                                <!--END公用翻页代码-->
                            </div>
						</div>
					</div>
				</div>
			</form>
		</div>
	</div>
	<script type="text/javascript">
        jQuery(document).ready(function(){
        	jQuery.ajax({  
    	        async : false,  
    	        cache:false,  
    	        type: 'POST',  
    	        dataType : "json",  
    	        url: '$!{basePath}/p3/cms/erpCategory.do?tree',//请求的action路径  
    	        error: function () {//请求失败处理函数  
    	            alert('请求失败');
    	        },  
    	        success:function(data){ //请求成功后处理函数。   
					jQuery.each( data, function(i, n){
						jQuery("." + n.id).html(n.name);
                    });
    	        }
    	    });  
        });
    </script>
</body>
</html>