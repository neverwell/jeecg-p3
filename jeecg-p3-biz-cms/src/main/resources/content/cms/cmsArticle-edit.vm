            'fileObjName'    : 'file',  
            'buttonText'     : '上传图片',  
            'height'         : '25',  
            'progressData'   : 'percentage',  
            'fileTypeDesc'   : '支持格式:jpg/gif/jpeg/png/bmp.',    
